<%- include("part/header",{title:"刘贤杰的个人博客",css:["index"],js:["part/title"],layui:true})%>
<%- include("part/canvas")%>
<link rel="stylesheet" href="/css/articlelist.css">
<div id="wrap" class="wrap ">
    <div class="content">

    <ul class="layui-timeline">
        <%data.forEach(v=>{%>
        <li class="layui-timeline-item">
            <i class="layui-icon layui-timeline-axis">&#xe63f;</i>
            <div class="layui-timeline-content layui-text">
                <h3 class="layui-timeline-title"><%=v.date%></h3>
                <a href="/article/<%=v._id%>"><%=v.title%></a>
            </div>
        </li>
        <%});%>
        <li class="layui-timeline-item">
            <i class="layui-icon layui-timeline-axis">&#xe63f;</i>
            <div class="layui-timeline-content layui-text">
                <div class="layui-timeline-title">过去</div>
            </div>
        </li>
    </ul>
</div>
</div>

<!--引入layui的模块代码-->
<script src="/js/index-layui.js"></script>